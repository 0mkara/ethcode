{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "target": "es5",
    "rootDir": ".",
    "lib": [
      "dom",
      "es6"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src",
    "ext-src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    ".vscode-test"
  ]
}