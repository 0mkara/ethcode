{
  "name": "ethcode",
  "displayName": "ETHcode",
  "description": "Ethereum IDE for VS Code",
  "version": "0.0.0",
  "publisher": "0mkara",
  "repository": "https://github.com/0mkara/ethcode",
  "engines": {
    "vscode": "^1.25.0"
  },
  "activationEvents": [
    "onCommand:ethcode.activate",
    "onCommand:ethcode.compile",
    "onCommand:ethcode.refactor"
  ],
  "main": "./build/ext-src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ethcode.activate",
        "title": "Activate ETHcode extension",
        "category": "Ethereum"
      },
      {
        "command": "ethcode.compile",
        "title": "Solidity compile",
        "category": "Ethereum"
      },
      {
        "command": "ethcode.refactor",
        "title": "Solidity compile refactor",
        "category": "Ethereum"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+e",
        "command": "ethcode.activate"
      },
      {
        "key": "ctrl+alt+c",
        "command": "ethcode.compile"
      }
    ]
  },
  "dependencies": {
    "@types/react-collapse": "^4.0.2",
    "react": "^16.8.6",
    "react-collapse": "^4.0.3",
    "react-dom": "^16.8.6",
    "react-motion": "^0.5.2",
    "react-redux": "^7.0.3",
    "react-scripts-ts": "2.16.0",
    "react-select": "^2.4.3",
    "redux": "^4.0.1",
    "remix-url-resolver": "^0.0.5",
    "solc": "^0.5.7"
  },
  "scripts": {
    "vscode:prepublish": "react-scripts-ts build && tsc -p tsconfig.extension.json",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "build": "react-scripts-ts build && tsc -p tsconfig.extension.json",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.14.4",
    "typescript": "^3.4.5",
    "vscode": "^1.1.34"
  }
}
