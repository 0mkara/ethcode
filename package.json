{
  "name": "ethcode",
  "displayName": "ETHcode",
  "description": "Ethereum IDE for VS Code",
  "version": "0.0.0",
  "private": true,
  "publisher": "0mkara",
  "repository": "https://github.com/0mkara/ethcode",
  "engines": {
    "vscode": "^1.25.0"
  },
  "activationEvents": [
    "onCommand:ethcode.activate",
    "onCommand:ethcode.compile",
    "onCommand:ethcode.refactor"
  ],
  "main": "./build/ext-src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ethcode.activate",
        "title": "Activate ETHcode extension",
        "category": "Ethereum"
      },
      {
        "command": "ethcode.compile",
        "title": "Solidity compile",
        "category": "Ethereum"
      },
      {
        "command": "ethcode.refactor",
        "title": "Solidity compile refactor",
        "category": "Ethereum"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+e",
        "command": "ethcode.activate"
      },
      {
        "key": "ctrl+alt+c",
        "command": "ethcode.compile"
      }
    ]
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-app-polyfill": "^1.0.1",
    "react-dev-utils": "^9.0.1",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-select": "^2.4.3",
    "redux": "^4.0.1",
    "remix-url-resolver": "^0.0.5",
    "resolve": "1.10.0",
    "sass-loader": "7.1.0",
    "semver": "6.0.0",
    "solc": "0.5.7",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "1.2.3",
    "ts-pnp": "1.1.2",
    "typescript": "3.4.5",
    "url-loader": "1.1.2",
    "webpack": "4.29.6",
    "webpack-dev-server": "3.2.1",
    "webpack-manifest-plugin": "2.0.4",
    "workbox-webpack-plugin": "4.2.0"
  },
  "scripts": {
    "vscode:prepublish": "node scripts/build.js && tsc -p tsconfig.extension.json",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "build": "node scripts/build.js && tsc -p tsconfig.extension.json",
    "test": "node scripts/test.js",
    "watch": "tsc -watch -p ./"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "vscode": "^1.1.34"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [
      "/home/ayanrocks/web/ethcode/src"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
